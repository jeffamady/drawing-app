<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.amadydev.drawingapp.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/drawing_view_layout_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_paint_colors"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/ll_paint_colors"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawing_view"
        app:layout_constraintBottom_toTopOf="@+id/ib_brush"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/black"
            android:background="@color/black"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/blue"
            android:background="@color/blue"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/yellow"
            android:background="@color/yellow"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/sky_blue"
            android:background="@color/sky_blue"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/green"
            android:background="@color/green"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/pink"
            android:background="@color/pink"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/grey"
            android:background="@color/grey"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/violet"
            android:background="@color/violet"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tag="@color/red"
            android:background="@color/red"
            android:src="@drawable/pallet_normal"
            android:layout_margin="2dp"
            android:contentDescription="@string/brush_size" />

    </LinearLayout>

    <ImageButton
        android:contentDescription="@string/brush_size"
        android:id="@+id/ib_brush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_brush_01"
        app:layout_constraintTop_toBottomOf="@+id/ll_paint_colors"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
  />

</androidx.constraintlayout.widget.ConstraintLayout>